    for(let iblank = 1; iblank <= blankSize; iblank++){ 
  %>
      <div></div>
  <% }   %>
</div>

<div class="titleImg-content">
  <% if (title.choice.img) { %>
      <img src="/assets/img/<%= title.choice.img %>" alt="">
    <% } %>    
</div>